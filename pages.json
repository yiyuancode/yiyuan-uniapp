{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"navigationStyle": "custom",
				"navigationBarTextStyle": "black",
				"app-plus": {
					"titleView": false
				}
				// #ifdef APP-PLUS
				,
				"enablePullDownRefresh": true
				// #endif
			}
		}, {
			"path": "pages/search/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "搜索",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/search/list/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "搜索结果",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/search/list/list",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "榜单",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/marketing/flashSale",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "限时抢购",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/marketing/billionSubsidy",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "百亿补贴",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/shop/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "店铺首页",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/goods/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "产品首页",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/user/index/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "个人中心",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/user/order/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "订单提交",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/user/login/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "登录",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/category/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "分类",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/cart/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": false
			}

		},
		{
			"path": "pages/message/index",
			"style": {
				"navigationStyle": "custom",
				"navigationBarTitleText": "消息",
				"enablePullDownRefresh": false
			}

		}
	],
	"subPackages": [{
		"root": "pages-user",
		"pages": [{
			"path": "user/user"
		}]
	}],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "一源商城",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#999",
		"selectedColor": "#0aa671",
		"borderStyle": "white",
		"list": [{
				"pagePath": "pages/index/index"
			},
			{
				"pagePath": "pages/category/index"
			},
			{
				"pagePath": "pages/cart/index"
			},
			{
				"pagePath": "pages/message/index"
			},
			{
				"pagePath": "pages/user/index/index"
			}
		]
	},
	"uniIdRouter": {}
